{
    "$id": "https://schemas.3d.si.edu/public_api/articles.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "Articles",
    "description": "References to external articles (documents or media files).",

    "definitions": {
        "article": {
            "$id": "#article",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                },
                "mimeType": {
                    "type": "string"
                },
                "thumbnailUri": {
                    "type": "string"
                }
            },
            "required": [
                "id"
            ]
        }
    },

    "type": "object",
    "properties": {
        "mainArticleId": {
            "description": "Id of the main article. This is the default article displayed with the item.",
            "type": "string"
        },
        "articles": {
            "type": "array",
            "items": {
                "$ref": "#article"
            }
        }
    },
    "additionalProperties": false
}
