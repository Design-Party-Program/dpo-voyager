    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "Smithsonian 3D Presentation - Explorer",
    "description": "contains information about viewer configuration (scene environment, UI, etc.)",

    "type": "object",
    "properties": {
        "renderer": {
            "type": "object",
            "properties": {
                "units": {

                },
                "shader": {

                },
                "exposure": {

                },
                "gamma": {

                },
                "environment": {

                }
            }
        },
        "reader": {
            "type": "object",
            "properties": {
                "enabled": {
                    "type": "boolean",
                    "default": false
