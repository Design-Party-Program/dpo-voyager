{
    "$id": "https://schemas.3d.si.edu/public_api/documents.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "Documents",
    "description": "References to external documents, articles or media files.",

    "definitions": {
        "document": {
            "$id": "#document",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "minLength": 1
                },
                "title": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "uri": {
                    "type": "string"
                },
                "mimeType": {
                    "type": "string"
                },
                "thumbnailUri": {
                    "type": "string"
                }
            },
            "required": [
                "id"
            ]
        }
    },

    "type": "object",
    "properties": {
        "mainDocumentId": {
            "description": "Id of the main document. This is the default document displayed with the item.",
            "type": "string"
        },
        "documents": {
            "type": "array",
            "items": {
                "$ref": "#document"
            }
        }
    },
    "additionalProperties": false
}
