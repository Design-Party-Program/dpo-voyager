{
    "$id": "https://schemas.3d.si.edu/voyager/tours.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",

    "title": "Tours",
    "description": "Animated tours and snapshots for a 3D item.",

    "type": "object",
    "properties": {
        "title": {
            "type": "string"
        },
        "lead": {
            "type": "string"
        },
        "tags": {
            "description": "Array of tags, categorizing the article.",
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "steps": {
            "type": "array",
            "items": {
                "type": "object"
            }
        },
        "targets": {
            "type": "array",
            "items": {
                "type": "object"
            }
        }
    }
}
